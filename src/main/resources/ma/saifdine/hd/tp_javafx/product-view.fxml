<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ma.saifdine.hd.tp_javafx.controller.ProductController"
      spacing="10"
      styleClass="main-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <GridPane vgap="10" hgap="10">
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Prix:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Button fx:id="addButton" text="Ajouter" onAction="#handleAddProduct" styleClass="button-primary"/>
            <Button fx:id="deleteButton" text="Supprimer" onAction="#handleDeleteProduct" styleClass="button-danger"/>
        </HBox>
    </GridPane>

    <ListView fx:id="productList" VBox.vgrow="ALWAYS"/>

</VBox>